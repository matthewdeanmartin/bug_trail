{% extends "view_base.jinja" %}
{% block title %}Bug Trail Error Log{% endblock %}
{% block head %}
    {{ super() }}
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
{% endblock %}
{% block content %}
    <h1>Error Logs Overview</h1>
    <table class="table table-striped">
        <tr>
            <!-- Table headers for each field -->
            <th>Details</th>
            <th>Timestamp</th>
            <th>Module</th>
            <th>Function Name</th>
            <th>Level</th>
            <th>Message</th>
            <th>Filename</th>
{#            <th>Process ID</th>#}
{#            <th>Thread Name</th>#}
        </tr>
        {% for log in logs %}
        <tr>
            <td><a href="{{ log.detailed_filename }}">View Details</a></td>
            <!-- Table data for each log record -->
            <td>{{ log.created }}</td>
            <td>{{ log.module }}</td>
            <td>{{ log.funcName }}</td>
            <td>{{ log.levelname }}</td>
            <td>{{ log.msg }}</td>
            <td><a href="{{log.pathname}}">{{ log.filename }}</a></td>


{#            <td>{{ log.process }}</td>#}
{#            <td>{{ log.threadName }}</td>#}
        </tr>
        {% endfor %}
    </table>
  <ul class="pagination">
    {% for page_number, page in pages.items() %}
    <li class="page-item"><a class="page-link" href="{{page}}">{{ page_number }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}



